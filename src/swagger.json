                    "required":"true",
                    "content":{
                        "aplication/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"object"
                                    }
                                },
                                "example":{
                                    "name":"name sample",
                                    "email":"sample@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"request success",
                        "content":{
                            "aplication/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "id":{
                                            "type":"string",
                                            "format":"uuid"
                                        },
                                        "admin":{
                                            "type":"boolean"
                                        },
                                        "name":{
                                            "type":"string"
                                        },
                                        "email":{
