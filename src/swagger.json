                                            "format":"Date"
                                        },
                                        "updated_at":{
                                            "type":"string",
                                            "format":"Date"
                                        }
                                    },
                                    "example":{
                                        "id":"string of uuid valid",
                                        "admin":"false",
                                        "name":"name sample",
                                        "email":"sample@gmail.com",
                                        "created_at":"YYYY-MM-DDTHH:mm:ss.sssZ",
                                        "updated_at":"YYYY-MM-DDTHH:mm:ss.sssZ"
                                    }
                                }
                            }
